@model FaturaEkleModel
@{ }


<form asp-action="Ekle" asp-controller="Home" asp-area="Admin" method="post"
      class="w-75 mx-auto p-3" enctype="multipart/form-data">

    @if (ViewBag.Customers != null)
    {
<label>Müşteri</label>
                <select class="form-control mb-2" asp-for="UserId">
                    @foreach (var item in ViewBag.Customers)
                    {
    <option value="@item.Id">@item.Name @item.SurName</option>}
                </select>}
    @if (ViewBag.Companies != null)
    {
<label>Kurum</label>
                <select class="form-control mb-2" asp-for="UserId">
                    @foreach (var item in ViewBag.Companies)
                    {
    <option value="@item.Id">@item.Name</option>
}
                </select>
                                <label>Müşteri</label>
                                                <select class="form-control mb-2" asp-for="UserId">
                                                    @foreach (var item in ViewBag.Customers2)
                                                    {
                                    <option value="@item.Id">@item.Name @item.SurName</option>}
                                                </select>}

    <div class="form-group">
        <label>Fatura Dönemi: </label>
        <span asp-validation-for="@Model.Ad" class="text-danger"></span>
        <input asp-for="@Model.Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fatura Tutarı: </label>
        <span asp-validation-for="@Model.Fiyat" class="text-danger"></span>
        <input asp-for="@Model.Fiyat" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fatura Açıklama: </label>
        <span asp-validation-for="@Model.Aciklama" class="text-danger"></span>
        <input asp-for="@Model.Aciklama" class="form-control" />
    </div>
    <div class="form-group mt-2 w-100">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}