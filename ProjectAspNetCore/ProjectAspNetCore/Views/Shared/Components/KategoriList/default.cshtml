    @*<a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action
           @(ViewBag.KategoriId == null ? "active" : "")" aria-current="true">
        Faturalarım
    </a>*@
    <br />
    <a asp-action="Index" asp-controller="Home" asp-route-kategoriId="@odenmisId "
       class="list-group-item list-group-item-action @(ViewBag.KategoriId== (int)FaturaStatusEnum.Ödenmis ? "active":"")"
       aria-current="true">Ödenmiş</a>
    <a asp-action="Index" asp-controller="Home" asp-route-kategoriId="@odenmemisId"
       class="list-group-item list-group-item-action @(ViewBag.KategoriId== (int)FaturaStatusEnum.Ödenmemis ? "active":"")"
       aria-current="true">Ödenmemiş</a>
</div>