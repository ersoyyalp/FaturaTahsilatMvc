@model KullanıcıGirisModel

@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>GİRİŞ YAP</title>
</head>

<style>
    body {
        background-color: #99d7d9;
        display: grid;
        place-items: center;
        height: 100vh;
    }

    .selected {
        background-color: #0d8fa9;
        color: white;
        border: 1px solid #8eb5b7;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /*

    User tablosuna type alanı ekle user ve company olarak enum yapısı kullan.
    FaturaBilgi Tablosuna user ve company kolanları ekle.

    Rolleme gerekirse gerekli rolleri db oluşurken kaydet. Admin / Customer / Company rolleri tut.

    */
</style>

<body>


    <div class="card d-flex justify-content-center align-items-center p-5"
         style="width: 600px; border-radius: 15px; min-height: 500px;">
        <h4 class="text-center mb-5" style="letter-spacing: 1px;">
           GİRİŞ YAP
        </h4>
        <form class="w-100" method="post" >

            <div class="form-group">
                <span asp-validation-for="@Model.KullaniciAd" class="text-danger"></span>
                <input type="text" asp-for="@Model.KullaniciAd" class="form-control" placeholder="Kurum No / Tc Kimlik No" />
            </div>
            <div class="form-group">
                <span asp-validation-for="@Model.Sifre" class="text-danger"></span>
                <input type="password" asp-for="@Model.Sifre" class="form-control"  placeholder="Şifre" />
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="@Model.BeniHatirla" class="form-check-input" />
                <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla</label>
            </div>
            <div class="form-group row justify-content-center">
                <button type="submit" class="btn btn-primary btn-info mb-2" style="background-color:#0bb2d4;color:white;width:95%;">Giriş Yap</button>
                <a type="submit" href="/Home/Register" class="" style="color:#0bb2d4;width:100%;text-align:right;font-size:110%">Kayıt Ol</a>
            </div>
        </form>
    </div>

    
</body>
@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
</html>

